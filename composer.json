{
    "name": "spip/tests",
    "type": "library",
    "description": "Test suite for SPIP.",
    "keywords": ["cms", "spip"],
    "license": [
        "MIT"
    ],
    "autoload": {
        "psr-4": {
            "Spip\\Core\\Testing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spip\\Core\\Tests\\": "tests/",
            "Utils\\Rector\\": "utils/rector/src",
            "Utils\\Rector\\Tests\\": "utils/rector/tests"
        }
    },
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "ext-ctype": "*"
    },
    "suggest": {
        "ext-mbstring": "For best performance, mbstring should be installed as it is faster than ext-iconv",
        "ext-iconv": "Can be used as fallback when ext-mbstring is not available"
    },
    "require-dev": {
        "lolli42/finediff": "^1.0",
        "phpunit/phpunit": "^8.3 || ^9.4",
        "symfony/var-dumper": "^5.4 || ^6",
        "symplify/easy-coding-standard": "^11.1"
    },
    "repositories": [
    ],
    "config": {
        "sort-packages": true
    }
}
